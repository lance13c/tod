{
  "name": "bun-hono-better-auth",
  "version": "1.0.0",
  "description": "A high-performance API template using Bun, Hono, and Better Auth",
  "author": "Mehedi <admin@promehedi.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProMehedi/bun-hono-better-auth"
  },
  "scripts": {
    "start": "NODE_ENV=production bun run src/server.ts",
    "dev": "bun run --hot src/server.ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "bun run src/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/nodemailer": "^7.0.1",
    "axios": "^1.8.2",
    "better-auth": "^1.2.3",
    "hono": "^4.7.4",
    "nodemailer": "^7.0.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^5.22.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "bun",
    "hono",
    "better-auth",
    "prisma",
    "sqlite",
    "typescript",
    "api",
    "rest",
    "template"
  ]
}
